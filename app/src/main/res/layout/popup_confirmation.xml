<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightBlue"
    android:padding="@dimen/appbar_padding">

    <TextView
        android:id="@+id/labelPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="22sp"
        android:text="Confirmer la validation ?"/>

    <Button
        android:id="@+id/btn_validVolunteer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/labelPopup"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/field_button"
        android:textColor="@color/colorWhite"
        android:text="Confirmer">

    </Button>

    <Button
        android:id="@+id/btn_cancelVolunteer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/labelPopup"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/field_button"
        android:textColor="@color/colorWhite"
        android:text="Annuler">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>